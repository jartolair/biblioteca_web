<div class="container">
  
  <div class="row" id="pwd-container">
    <div class="col-md-4"></div>
    
    <div class="col-md-4">
      <section class="login-form">
        <form method="post" action="login2.jsp" role="login">
          <h2>Inicio de sesion</h2>
          <input type="text" name="dni" placeholder="DNI" required class="form-control input-lg" />
          
          <input type="password" class="form-control input-lg" id="password" name="password" placeholder="Password" required="" />
          
          
          <div class="pwstrength_viewport_progress"></div>
          
          
          <button type="submit" name="go" class="btn btn-lg btn-primary btn-block">Iniciar sesion</button>
          <div>
            <a href="recuperar_contr.html">Has olvidado la contraseña?</a>
          </div>
          
        </form>
      </section>  
      </div>
      
